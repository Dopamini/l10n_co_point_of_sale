<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
    <template id="report_sessionsummary_inherit" inherit_id="point_of_sale.report_sessionsummary" name="Informe Diario Sesion">
        <xpath expr="//div[@class='page']" position="replace">
            <div class="page">
                <h2 style="text-align:center"><span t-field="o.user_id.company_id.name"/></h2>
                <h4 style="text-align:center;width: 100%;"><span t-field="o.user_id.company_id.partner_id.formatedNit"/></h4>
                <h2>Daily POS Sales Report</h2>
                <div class="row mt32 mb32">
                    <div class="col-xs-3">
                        <strong>Session No: </strong>:<br/>
                        <span t-field="o.name"/>
                    </div>
                    <div class="col-xs-3">
                        <strong>Voucher Date</strong>:<br/>
                        <span t-field="o.stop_at"/>
                    </div>
                    <div class="col-xs-3">
                        <strong>Responsable</strong>:<br/>
                        <span t-field="o.user_id"/>
                    </div>
                    <div class="col-xs-3">
                        <strong>Point of sale</strong>:<br/>
                        <span t-field="o.config_id.name"/>
                    </div>
                    <div class="col-xs-3">
                        <strong>Hardware ID</strong>:<br/>
                        <span t-field="o.config_id.name"/>
                    </div>
                </div>
                <div class="row mt32 mb32">
                    <div class="col-xs-3">
                        <strong>Initial date</strong>:<br/>
                        <span t-field="o.start_at"/>
                    </div>
                    <div class="col-xs-3">
                        <strong>Closing Date</strong>:<br/>
                        <span t-field="o.stop_at"/>
                    </div>
                </div>
                <div class="row mt32 mb32">
                    <div class="col-xs-3">
                        <strong>No. Initial Registration</strong>:<br/>
                        <span t-field="o.order_ids[-1].name"/>
                    </div>
                    <div class="col-xs-3">
                        <strong>No. Final Registration</strong>:<br/>
                        <span t-field="o.order_ids[0].name"/>
                    </div>
                </div>
                <h4>Total Payment Method</h4>
                <table class="table table-condensed mb32">
                    <thead>
                        <tr>
                            <th>
                                <strong>Reference</strong>
                            </th>
                            <th>
                                <strong>Journal</strong>
                            </th>
                            <th class="text-right">
                                <strong>Total Transactions</strong>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="o.statement_ids" t-as="statement">
                            <td><span t-field="statement.name"/></td>
                            <td><span t-field="statement.journal_id"/></td>
                            <td class="text-right">
                                <span t-field="statement.total_entry_encoding"
                                    t-field-options='{"widget": "monetary", "display_currency": "statement.currency_id"}'/>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div>
                    <h4>Ventas Detalladas:</h4>
                        <t t-set="total" t-value="0"/>
                        <t t-set="subtotal" t-value="0"/>
                        <t t-set="descuentos" t-value="0"/>
                        <t t-set="iva" t-value="0"/>
                        <t t-set="cnt" t-value="0"/>
                        <t t-set="impuesto" t-value="Iva"/>
                        
                        <t t-foreach="o.order_ids" t-as="order">
                            <t t-set="cnt" t-value="cnt + 1"/>
                            <t t-foreach="order.lines" t-as="lineas">
                                <t t-set="impuesto" t-value="lineas.tax_ids_after_fiscal_position.name"/>
                                <span t-esc="impuesto"/>
                                <t t-if="impuesto == lineas.tax_ids_after_fiscal_position.name">
                                    <t t-set="subtotal" t-value="subtotal + (lineas.price_unit * lineas.qty)"/>
                                    <t t-set="descuentos" t-value="descuentos + ((lineas.price_unit * lineas.qty)*(lineas.discount)/100)"/>
                                </t>

                            </t>
                            <t t-set="total" t-value="total + order.amount_total"/>
                            <t t-set="iva" t-value="iva + order.amount_tax"/>
                        </t>

                        <!--<t t-set="subtotal" t-value="total - iva"/>-->
                        <strong>IMPUESTO IVA 16 %</strong><br/><br/>
                        <strong>Cantidad de Ventas Realizadas:</strong>
                        <span t-esc="cnt"/><br/>
                        <strong>Valor sin iva:</strong>
                        <span t-esc="subtotal"/><br/>
                        <strong>Total Descuentos:</strong>
                        <span t-esc="descuentos"/><br/>
                        <strong>Valor Iva: </strong>
                        <span t-esc="iva"/><br/>
                        <strong>Total: </strong>
                        <span t-esc="total"/><br/>
                </div> 
            </div>                              
        </xpath>
    </template>
<template id="report_sessionsummary">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="report.internal_layout">
                
            </t>
        </t>
    </t>
</template>
</data>
</openerp>
