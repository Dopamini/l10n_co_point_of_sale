<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve" noupdate="1">

    <t t-extend="ClientDetails">
        <t t-jquery="div.client-details-box" t-operation="prepend">
            <div class='client-detail'>
                <span class='label'>Empresa?</span>
                <t t-if='partner.is_company'>
                    <input class='detail client-is-company' name='is_company' type='checkbox' disabled='disabled' checked='checked'></input>
                </t>
                <t t-if='!partner.is_company'>
                    <input class='detail client-is-company' name='is_company' type='checkbox' disabled='disabled'></input>
                </t>

            </div>
            <div class='client-detail'>
                <span class='label'>Tipo persona</span>
                <span class='detail client-person-type'><t t-esc='partner.personType' /></span>
            </div>
            <div class='client-details-left'>
                <div class='client-detail'>
                    <span class='label'>Tipo identificación</span>
                    <span class='detail client-identification-type'><t t-esc='partner.doctype' /></span>
                </div>
                <div class='client-detail'>
                    <span class='label'>Primer nombre</span>
                    <span class='detail client-first-name'><t t-esc='partner.x_name1' /></span>
                </div>
                <div class='client-detail'>
                    <span class='label'>Primer Apellido</span>
                    <span class='detail client-first-lastname'><t t-esc='partner.x_lastname1' /></span>
                </div>
            </div>
            <div class='client-details-right'>
                <div class='client-detail'>
                    <span class='label'>Número identificación</span>
                    <span class='detail client-identification-number'><t t-esc='partner.xidentification' /></span>
                </div>
                <div class='client-detail'>
                    <span class='label'>Segundo nombre</span>
                    <span class='detail client-second-name'><t t-esc='partner.x_name2' /></span>
                </div>
                <div class='client-detail'>
                    <span class='label'>Segundo Apellido</span>
                    <span class='detail client-second-lastname'><t t-esc='partner.x_lastname2' /></span>
                </div>
            </div>
        </t>
    </t>

    <t t-extend="ClientDetailsEdit">
        <t t-jquery="div.client-details-box" t-operation="prepend">
            <div class='client-detail'>
                <span class='label'>Empresa?</span>
                <t t-if='partner.is_company'>
                    <input class='detail client-is-company' name='is_company' type='checkbox' checked='checked' t-att-value='partner.is_company'></input>
                </t>
                <t t-if='!partner.is_company'>
                    <input class='detail client-is-company' name='is_company' type='checkbox' t-att-value='partner.is_company'></input>
                </t>
            </div>
            <div class='client-detail'>
                <span class='label'>Tipo persona</span>
                <select class='detail client-person-type' name='personType'>
                    <!-- FIXME estas opciones se necesitan obtener desde el backend -->
                    <t t-if='partner.personType'>
                        <option t-att-value='partner.personType'><t t-esc='partner.personType' /></option>
                    </t>
                    <t t-if='!partner.personType'>
                        <option value='1'>persona</option>
                    </t>
                </select>
            </div>
            <div class='client-details-left'>
                <div class='client-detail'>
                    <span class='label'>Tipo identificación</span>
                    <select class='detail client-doc-type' name='doctype'>
                        <!-- FIXME estas opciones se necesitan obtener desde el backend -->
                        <t t-if='partner.doctype'>
                            <option t-att-value='partner.doctype'><t t-esc='partner.doctype' /></option>
                        </t>
                        <t t-if='!partner.doctype'>
                            <option value='1'>Sin identificación</option>
                        </t>
                    </select>
                </div>
            </div>
            <div class='client-details-right'>
                <div class='client-detail'>
                    <span class='label'>Número identificación</span>
                    <input class='detail client-identification-number' name='xidentification' t-att-value='partner.xidentification' placeholder='Número de identificación'></input>
                </div>
            </div>
            <div class='client-details-left partner-names'>
                <div class='client-detail'>
                    <span class='label'>Primer Nombre</span>
                    <input class='detail client-first-name' name='x_name1' t-att-value='partner.x_name1' placeholder='Primer nombre'></input>
                </div>
            </div>
            <div class='client-details-right partner-names'>
                <div class='client-detail'>
                    <span class='label'>Segundo Nombre</span>
                    <input class='detail client-second-name' name='x_name2' t-att-value='partner.x_name2' placeholder='Segundo nombre'></input>
                </div>
            </div>
            <div class='client-details-left partner-names'>
                <div class='client-detail'>
                    <span class='label'>Primer Apellido</span>
                    <input class='detail client-first-lastname' name='x_lastname1' t-att-value='partner.x_lastname1' placeholder='Primer apellido'></input>
                </div>
            </div>
            <div class='client-details-right partner-names'>
                <div class='client-detail'>
                    <span class='label'>Segundo Apellido</span>
                    <input class='detail client-second-lastname' name='x_lastname2' t-att-value='partner.x_lastname2' placeholder='Segundo apellido'></input>
                </div>
            </div>
        </t>
    </t>



</templates>
